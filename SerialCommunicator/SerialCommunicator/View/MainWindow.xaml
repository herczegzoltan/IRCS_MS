<Window x:Class="SerialCommunicator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SerialCommunicator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="850">
    <Grid Margin="0,0,307,6">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Button IsEnabled="{Binding CmdConnectIsEnabled}" Command="{Binding CmdConnect}" FontSize="24" FontWeight="Bold" Content="Connect" HorizontalAlignment="Left" Margin="10" Padding="10"  Grid.Column="1" Grid.Row="1"  />
        <Button IsEnabled="{Binding CmdDisConnectIsEnabled}" Command="{Binding CmdDisConnect}"  FontSize="24" FontWeight="Bold" Content="Disconnect" HorizontalAlignment="Left" Margin="10" Padding="10"  Grid.Column="2" Grid.Row="1"  />

        <ComboBox SelectedItem="{Binding Path=SelectedAvailablePort,
                  Mode=OneWayToSource}" 
                  ItemsSource="{Binding AvailablePorts}"
                  Margin="10"
                  Grid.Column="1"
                  Grid.ColumnSpan="2"
                  Grid.Row="2"
                  FontSize="16"/>

        <ComboBox SelectedItem="{Binding Path=SelectedBaudRate,
                  Mode=OneWayToSource}" 
                  ItemsSource="{Binding BaudRates}"
                  Margin="10"
                  Grid.Column="3"
                  Grid.Row="2"
                  FontSize="16"/>

        <Label Content="{Binding StateOfDevice}" FontSize="24" Grid.Column="1" Margin="10" Grid.Row="4" />

    </Grid>
</Window>
